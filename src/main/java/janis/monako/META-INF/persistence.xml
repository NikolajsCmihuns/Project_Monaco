<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>janis.monako.models.CityRefEntity</class>
        <class>janis.monako.models.CommentReviewOnPlaceEntity</class>
        <class>janis.monako.models.CommentReviewOnRouteEntity</class>
        <class>janis.monako.models.PlaceEntity</class>
        <class>janis.monako.models.PlacesInRouteEntity</class>
        <class>janis.monako.models.PlaceTypeRefEntity</class>
        <class>janis.monako.models.ReviewOnPlaceEntity</class>
        <class>janis.monako.models.ReviewOnRouteEntity</class>
        <class>janis.monako.models.RouteEntity</class>
        <class>janis.monako.models.TagsRefEntity</class>
        <class>janis.monako.models.UserEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="janis"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
